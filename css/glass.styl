//colors
$gray = #AAAAAA


body
	width 100%
	height 100%
	font-family 'Roboto'
	
	h1
		color $gray
		font-size 18pt
		font-weight 300
	.side-column
		width 25%
		float left
		height 100%
	#left-column
		border-right 1px solid $gray
	#right-column
		border-left 1px solid gray
	#center-column
		background black
		width 50%
		float left
		height 100%
		
		#center-header
			width 100%
			position relative
			
			.section-title
				margin-left 5px
			
			.page-number
				color white
				position absolute
				right 5px
				font-size 22pt