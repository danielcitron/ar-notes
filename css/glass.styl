//colors
$gray = #AAAAAA
$green = #1D9689
$purple = #654C9C
$orange = #ED4544
$yellow = #FCC032
$red = #ED4544


body
	width 100%
	height 100%
	font-family 'Roboto'
	
	h1
		color $gray
		font-size 18pt
		font-weight 300
	.side-column
		width 23%
		float left
		height 100%
		background black
		
		.bookmark
			width 70%
			margin 0 15%
		
		.bookmark-green svg g rect
			fill $green
		.bookmark-purple svg g rect
			fill $purple
		.bookmark-orange svg g rect
			fill $orange
		.bookmark-yellow svg g rect
			fill $yellow
		.bookmark-red svg g rect
			fill $red
						
			
	#center-column
		background black
		width 54%
		float left
		height 100%
		position relative
		
		#center-header
			width 100%
			position absolute
			
			.section-title
				margin-left 5px
			
			.page-number
				color white
				font-size 22pt
				width 50%
				float left
				text-align center
		#text-content-container
			margin-top 18px
			width 100%
			
			svg
				width 100%
				height 100%
	