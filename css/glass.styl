@import 'nib'

//colors
$gray = #AAAAAA
$green = #1D9689
$purple = #654C9C
$orange = #ED4544
$yellow = #FCC032
$red = #ED4544


//animation
$easeOut   = cubic-bezier(0.190, 1.000, 0.220, 1.000)
$easeIn   = cubic-bezier(0.950, 0.050, 0.795, 0.035)
$easeInOut = cubic-bezier(1.000, 0.000, 0.000, 1.000)

body
	width 100%
	height 100%
	font-family 'Roboto'
	
	h1
		color $gray
		font-size 18pt
		font-weight 300
	.side-column
		width 23%
		float left
		height 100%
		background black
		position relative
		transition all .25s ease
		
		&.expanded
			width 100%
		&.gone
			display none
		
		.bookmark
			width 70%
			margin 0 15%
			height 40px
			overflow hidden
			position absolute
			opacity 1
			transition all .25s ease
			
			&.hover
				transform scale(1.5)
			&.faded
				opacity .5
			&.hidden
				opacity 0
			&.selected-left
				top 5%
				margin 0 0
				left 5%
			&.selected-right
				margin 0 0
				top 5%
				right 5%

		.note-content
			width 90%
			height 90%
			margin 5% 5%
			opacity 1
			transition opacity .25s ease 
			
			&.hidden
				opacity 0
			
			p
				color white
				font-size 18pt
				
		.bookmark-green svg g rect
			fill $green
		.bookmark-purple svg g rect
			fill $purple
		.bookmark-orange svg g rect
			fill $orange
		.bookmark-yellow svg g rect
			fill $yellow
		.bookmark-red svg g rect
			fill $red
		
		#b1
			top: 20%
		#b2
			top 45%
		#b3
			top 80%	
		#b4
			top 35%
		#b5
			top 70%
			
	#center-column
		background black
		width 54%
		float left
		height 100%
		position relative
		transition all .45s ease
		transform translate(0, 0%)
		transform translate3d(0,0,0)
		
		&.hidden
			transform translate(0, 100%)
			
		&.gone
			display none
		
		#center-header
			width 100%
			position absolute
			
			.section-title
				margin-left 5px
			
			.page-number
				color white
				font-size 22pt
				width 50%
				float left
				text-align center
		#text-content-container
			margin-top 18px
			width 100%
			
			svg
				width 100%
				height 100%
	